<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Inspect">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/poke_photo"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginTop="52dp"
            android:layout_marginEnd="56dp"
            android:src="@drawable/baseline_catching_pokemon_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/poke_name"
            android:layout_width="261dp"
            android:layout_height="59dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:gravity="center"
            android:text="RAYSLAYSLAY"
            android:textSize="28dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/poke_photo" />

        <TextView
            android:id="@+id/poke_level"
            android:layout_width="84dp"
            android:layout_height="60dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:text="Lv.100"
            android:textSize="28dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/poke_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/poke_photo" />

        <TextView
            android:id="@+id/poke_hp"
            android:layout_width="104dp"
            android:layout_height="55dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:text="HP: 999"
            android:textColor="#11AB00"
            android:textSize="28dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/poke_level" />

        <TextView
            android:id="@+id/poke_atk"
            android:layout_width="144dp"
            android:layout_height="55dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:text="Atk: 999"
            android:textColor="#D42401"
            android:textSize="28dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/poke_hp" />

        <TextView
            android:id="@+id/poke_def"
            android:layout_width="144dp"
            android:layout_height="55dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="56dp"
            android:gravity="center_vertical"
            android:text="Def: 999"
            android:textColor="#B28E00"
            android:textSize="28dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/poke_type" />

        <TextView
            android:id="@+id/poke_type"
            android:layout_width="225dp"
            android:layout_height="58dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:text="PSYCHIC TYPE"
            android:textColor="#000000"
            android:textSize="30dp"
            app:layout_constraintStart_toEndOf="@+id/poke_hp"
            app:layout_constraintTop_toBottomOf="@+id/poke_name" />

        <TextView
            android:id="@+id/poke_date"
            android:layout_width="346dp"
            android:layout_height="43dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="44dp"
            android:text="Encounter date: MM/DD/YYYY"
            android:textSize="15dp"
            android:textColor="#414141"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>